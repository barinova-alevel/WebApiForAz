@page "/daily-report"
@rendermode InteractiveServer
@using System.ComponentModel.DataAnnotations
@using BlazorApp.UI.Dtos
@using BlazorApp.UI.Models
@inject IHttpClientFactory HttpClientFactory
@inject IJSRuntime JSRuntime

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h3>Daily Report</h3>
            <p class="text-muted">Generate financial reports for a date</p>
        </div>
    </div>

    <!-- Date Selection Form -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-calendar-range"></i> Select Date</h5>
                </div>
                <div class="card-body">
                    <EditForm Model="reportRequest" OnValidSubmit="GenerateReport">
                        <DataAnnotationsValidator />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Date" class="form-label">Date *</label>
                                    <InputDate id="Date" class="form-control" @bind-Value="reportRequest.Date" />
                                    <ValidationMessage For="@(() => reportRequest.Date)" />
                                </div>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@isGenerating">
                                @if (isGenerating)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span>Generating Report...</span>
                                }
                                else
                                {
                                    <i class="bi bi-file-earmark-text"></i>
                                    <span>Generate Report</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>

    <!-- Report Results -->
    @if (report != null)
    {
        <!-- Totals Summary -->
        <div class="row mb-3">
            <div class="col-md-6 col-lg-4">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title mb-1">Total Income</h5>
                        <p class="card-text fs-4 fw-bold">@report.TotalIncome.ToString("C")</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card text-white bg-danger mb-3">
                    <div class="card-body">
                        <h5 class="card-title mb-1">Total Expenses</h5>
                        <p class="card-text fs-4 fw-bold">@report.TotalExpenses.ToString("C")</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Operations List -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-list-ul"></i> Operations (@report.Operations.Count)
                        </h5>
                        <div class="btn-group" role="group">
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => FilterOperations(null)">
                                All
                            </button>
                            <button class="btn btn-sm btn-outline-success" @onclick="() => FilterOperations(true)">
                                Income
                            </button>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => FilterOperations(false)">
                                Expenses
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (filteredOperations?.Any() == true)
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Type</th>
                                            <th>Category</th>
                                            <th>Amount</th>
                                            <th>Note</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var operation in filteredOperations)
                                        {
                                            <tr class="@(operation.OperationType?.IsIncome == true ? "table-success" : "table-danger")">
                                                <td>@operation.Date.ToShortDateString()</td>
                                                <td>
                                                    <span class="badge @(operation.OperationType?.IsIncome == true ? "bg-success" : "bg-danger")">
                                                        @(operation.OperationType?.IsIncome == true ? "Income" : "Expense")
                                                    </span>
                                                </td>
                                                <td>
                                                    <strong>@operation.OperationType?.Name</strong>
                                                    @if (!string.IsNullOrEmpty(operation.OperationType?.Description))
                                                    {
                                                        <br>
                                        
                                                        <small class="text-muted">@operation.OperationType.Description</small>
                                                    }
                                                </td>
                                                <td class="@(operation.OperationType?.IsIncome == true ? "text-success" : "text-danger")">
                                                    <strong>@(operation.OperationType?.IsIncome == true ? "+" : "-")@operation.Amount.ToString("C")</strong>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(operation.Note))
                                                    {
                                                        <span title="@operation.Note">@(operation.Note.Length > 50 ? operation.Note.Substring(0, 50) + "..." : operation.Note)</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No note</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> No operations found for the selected period.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Error Display -->
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger mt-3">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
    }
</div>

